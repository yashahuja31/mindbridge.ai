{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",
    
    // Environment Settings - Node.js Backend
    "target": "ES2020",
    "module": "commonjs", 
    "moduleResolution": "node",  
    "lib": ["ES2020"],
    "types": ["node"],  
    
    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    
    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "allowSyntheticDefaultImports": true,
    
    // Recommended Options
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    
    // Node.js Backend Specific
    "isolatedModules": true,
    "moduleDetection": "force",
    
    // Relaxed for Node.js development
    "verbatimModuleSyntax": false,  // Changed to false
    "noUncheckedSideEffectImports": false  // Changed to false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}